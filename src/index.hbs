<section id="portfolio" class="sec">
  <div class="inner">
    <h2 class="sec-title">Portfolio</h2>

    <div class="row">
      <div class="project four columns">
        <div class="title"><a href="https://github.com/jadnco/boilerplate" title="Boilerplate">Boilerplate</a></div>
